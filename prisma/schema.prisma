generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id           String   @id @default(cuid())
  slug         String   @unique
  name         String   @db.Text
  price        Decimal
  rating       Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  description  String   @db.Text
  mainImage    String?
  images       Image[]
  countInStock Int
  likes        Int      @default(0)
  sales        Int      @default(0)

  categoryId String
  category   Category    @relation(fields: [categoryId], references: [id])
  orderItem  OrderItem[]

  @@index([categoryId])
}

model Image {
  id        String   @id @default(cuid())
  name      String
  url       String
  productId String
  mainImage Boolean  @default(false)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
}

model Category {
  id      String    @id @default(cuid())
  name    String
  slug    String
  product Product[]
}

model Order {
  id        String      @id @default(cuid())
  cn        String      @unique
  isPaid    Boolean     @default(false)
  status    OrderStatus @default(pending)
  name      String      @default("")
  phone     String      @default("")
  city      String      @default("")
  address   String      @default("")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  orderItem OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([orderId])
}

enum OrderStatus {
  pending
  intransit
  outfordelivery
  delivered
}
